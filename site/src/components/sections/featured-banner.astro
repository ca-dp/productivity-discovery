---
import { Icon } from '@iconify/react';

const featuredTool = {
  name: "Cursor",
  description: "AIパワードの次世代IDE",
  ctaText: "今すぐ試す",
  ctaLink: "#",
  icon: "logos:cursor"
};
---

<section class="bg-blue-600 text-white py-20">
  <div class="container mx-auto text-center">
    <h2 class="text-2xl font-semibold mb-4">注目のツール</h2>
    <div class="flex justify-center items-center mb-4">
      <Icon icon={featuredTool.icon} width="48" height="48" class="mr-4" />
      <h3 class="text-4xl font-bold">{featuredTool.name}</h3>
    </div>
    <p class="text-xl mb-8">{featuredTool.description}</p>
    <a href={featuredTool.ctaLink} class="bg-white text-blue-600 hover:bg-gray-100 font-bold py-2 px-6 rounded-full transition duration-300">
      {featuredTool.ctaText}
    </a>
  </div>
</section>