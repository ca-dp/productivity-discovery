---
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';

interface Testimonial {
  name: string;
  saying: string;
  handle: string;
  position: string;
  avatarUrl: string;
}

const testimonials: Testimonial[] = [
  {
    name: "堂前 紀郎",
    saying: "分野や職種問わず何事も「<b>最新サービスはとにかく使い倒した人が勝つ</b>」のがこの業界の<b>20数年前から変わらない絶対ルール</b>です。",
    handle: "@domae_norio",
    position: "MG-DX 代表取締役",
    avatarUrl: "https://pbs.twimg.com/profile_images/1303300587958616065/Glrp1DHj_400x400.jpg"
  },
  {
    name: "藤田 晋",
    saying: "「<b>運の量は無限</b>。正しい『<b>選択・努力</b>』で<b>複利のように増えていく</b>」",
    handle: "@susumu_fujita",
    position: "サイバーエージェント社長",
    avatarUrl: "https://pbs.twimg.com/profile_images/1046646948646641664/4opd7X-Q_400x400.jpg"
  },
  // Add more testimonials here as needed
];

// Select a random testimonial
const randomTestimonial = testimonials[Math.floor(Math.random() * testimonials.length)];
---

<section class="py-24 bg-gradient-to-b from-gray-50 to-white dark:from-gray-900 dark:to-gray-800">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto bg-white dark:bg-gray-800 rounded-2xl shadow-xl overflow-hidden transform hover:scale-105 transition-transform duration-300">
      <div class="flex flex-col md:flex-row">
        <div class="md:w-1/3 bg-gradient-to-br from-blue-500 to-purple-600 p-8 flex items-center justify-center">
          <div class="text-center">
            <div class="relative w-32 h-32 mx-auto mb-4">
              <Image 
                src={randomTestimonial.avatarUrl} 
                alt={`${randomTestimonial.name}のアバター`} 
                class="rounded-full border-4 border-white shadow-lg"
                width={128}
                height={128}
              />
              <div class="absolute bottom-0 right-0 bg-green-400 rounded-full w-6 h-6 border-2 border-white"></div>
            </div>
            <h3 class="text-2xl font-bold text-white mb-2">{randomTestimonial.name}</h3>
            <p class="text-blue-200">{randomTestimonial.position}</p>
          </div>
        </div>
        <div class="md:w-2/3 p-8 flex flex-col justify-center">
          <Icon name="mdi:format-quote-open" class="w-12 h-12 text-blue-500 mb-4" />
          <blockquote class="text-xl text-gray-700 dark:text-gray-300 leading-relaxed mb-6" set:html={randomTestimonial.saying}>
          </blockquote>
          <div class="flex items-center justify-end">
            <Icon name="mdi:twitter" class="w-6 h-6 text-blue-400 mr-2" />
            <a href={`https://twitter.com/${randomTestimonial.handle.slice(1)}`} target="_blank" rel="noopener noreferrer" class="text-blue-500 hover:underline">
              {randomTestimonial.handle}
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>