---
import { Icon } from 'astro-icon/components';

interface CategoryProps {
  name: string;
  slug: string;
  featuredTool: string;
  icon: string;
  gradient: string;
}

interface Props {
  category: CategoryProps;
}

const { category, isMain = false } = Astro.props;
---

<div class={`category-preview ${isMain ? 'main-category' : ''}`}>
  <div class={`rounded-lg shadow-lg overflow-hidden transform transition duration-300 hover:shadow-xl ${isMain ? 'bg-blue-50' : 'bg-white hover:scale-105'}`}>
    <div class={`h-2 bg-gradient-to-r ${category.gradient}`}></div>
    <div class="p-6">
      <div class="flex items-center mb-4">
        <Icon name={category.icon} class={`w-8 h-8 mr-3 ${isMain ? 'text-blue-600' : 'text-gray-700'}`} />
        <h3 class={`font-semibold ${isMain ? 'text-blue-600 text-2xl' : 'text-gray-800 text-xl'}`}>{category.name}</h3>
      </div>
      <p class={`${isMain ? 'text-gray-800 font-medium' : 'text-gray-600'} mb-4`}>おすすめツール: {category.featuredTool}</p>
      <a href={`/category/${category.slug}`} class={`inline-flex items-center ${isMain ? 'text-blue-600 hover:text-blue-800' : 'text-blue-500 hover:text-blue-700'} font-semibold transition duration-300`}>
        詳細を見る
        <Icon name="heroicons:arrow-right" class="w-5 h-5 ml-2" />
      </a>
    </div>
  </div>
</div>

<style>
  .category-preview {
    height: 100%;
  }
  
  .main-category {
    grid-column: span 2;
  }

  @media (max-width: 768px) {
    .main-category {
      grid-column: span 1;
    }
  }
</style>