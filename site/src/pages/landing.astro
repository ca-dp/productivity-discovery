---
import HeroProductivity from "@/components/sections/hero-productivity.astro";
import EngineerTools from "@/components/sections/engineer-tools.astro";
import ComingSoon from "@/components/sections/coming-soon.astro";
import ToolComparison from "@/components/sections/tool-comparison.astro";
import FeaturedBanner from "@/components/sections/featured-banner.astro";

import MainLayout from "@/layouts/main-layout.astro";

const ideTools = [
  { name: "Cursor" },
  { name: "VSCode" },
  { name: "GitHub Copilot" },
  { name: "IntelliJ IDEA" }
];

const taskManagementTools = [
  { name: "JIRA" },
  { name: "Linear" }
];
---

<MainLayout title="生産性ポータル">
  <HeroProductivity />
  <EngineerTools />
  <ToolComparison category="IDE" tools={ideTools} />
  <FeaturedBanner />
  <ToolComparison category="タスク管理" tools={taskManagementTools} />
  <ComingSoon title="デザイナー向け" />
  <ComingSoon title="ビジネス向け" />
</MainLayout>
